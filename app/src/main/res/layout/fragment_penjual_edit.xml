<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PenjualEditFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="25dp"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:src="@drawable/gucci" />

        <TextView
            android:id="@+id/textView6Edit"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textTitleEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e.g. Sepatu Nike Oscar"
            android:inputType="text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView9Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textPriceEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e.g. Rp 50.000"
            android:inputType="text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Describe Your Item"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textDescriptionEdit"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="e.g. Cuma dipakai sebentar"
            android:inputType="text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView11Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textBrandEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e.g. Nike Official"
            android:inputType="text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView12Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textSizeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="e.g. S,M,L"
            android:inputType="text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonSellEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:backgroundTint="#C65278"
            android:text="Save Changes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDeleteEdit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:backgroundTint="#403D3D"
                android:text="Delete Item" />

            <Button
                android:id="@+id/buttonCancelEdit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>